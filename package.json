{
  "name": "keyvault-desktop",
  "version": "1.0.0",
  "description": "A secure password manager",
  "main": "main.js",
  "scripts": {
    "frontend": "npm run dev --prefix frontend",
    "backend": "nodemon backend/src/server.js",
    "start": "electron .",
    "dev": "concurrently \"npm:frontend\" \"npm:start\"",
    "build:frontend": "npm run build --prefix frontend",
    "preview": "npm run build:frontend && electron .",
    "package": "npm run build:frontend && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
    "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.keyvault",
    "productName": "KeyVault",
    "publish": null,
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist/**/*",
      "backend/src/*"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "app.asar.unpacked/backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "zip",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "portable": {
      "unpackDirName": "KeyVault-data"
    }
  }
}